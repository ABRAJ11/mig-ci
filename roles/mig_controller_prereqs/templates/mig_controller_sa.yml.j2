---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ mig_controller_namespace }}

---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ mig_controller_sa_name }}
  namespace: {{ mig_controller_namespace }}

---
apiVersion: rbac.authorization.k8s.io/v1beta1
kind: RoleBinding
metadata:
  name: mig-sa-role-binding
  namespace: {{ mig_controller_namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: {{ mig_controller_sa_name }}
